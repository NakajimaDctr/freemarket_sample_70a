.header
  .header__main
    .header__main__logo
      = link_to root_path do
        = image_tag "logo.png", class:"header__main__logo--icon"
    %form{:action => "/posts", :method => "post", class: "header__main__form"}
      %input{:name => "content", :type => "text", class: "header__main__form--text_box", placeholder: "キーワードから検索"}
      %input{:type => "submit",class: "header__main__form--submit hidden"}
      .header__main__form--submit__btn
        = image_tag "icon-search 1.png", class:"header__main__form--submit__btn--icon"
  .header__nav_ber
    .header__nav_ber__left
      .header__nav_ber__left__category#category
        = link_to root_path do
          .header__nav_ber__left__category__area
            .header__nav_ber__left__category--text
              カテゴリ
        .ancestry
          .header__nav_ber__left__category_append
          .header__nav_ber__left__category_children_append
          .header__nav_ber__left__category_grandchildren_append
      .header__nav_ber__left__brand#brand
        = link_to root_path do
          .header__nav_ber__left__brand--text
            ブランド
        .header__nav_ber__left__brand_append

    .header__nav_ber__right
      - if user_signed_in?
        .header__nav_ber__right__info
          = link_to "#" do
            .header__nav_ber__right__info--text
              お知らせ
        .header__nav_ber__right__fav
          = link_to "#" do
            .header__nav_ber__right__fav--text
              お気に入り一覧
        .header__nav_ber__right__mypage
          = link_to user_path(current_user.id) do
            .header__nav_ber__right__mypage--text
              マイページ
      - else 
        .header__nav_ber__right__login
          = link_to new_user_session_path do
            .header__nav_ber__right__login--text
              ログイン
        .header__nav_ber__right__signin
          = link_to new_user_registration_path do
            .header__nav_ber__right__signin--text
              新規登録
